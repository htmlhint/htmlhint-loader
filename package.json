{
  "name": "htmlhint-loader",
  "version": "1.3.1",
  "description": "A webpack loader for htmlhint",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint",
    "prettier": "prettier --write .",
    "test": "nyc mocha --require @babel/register",
    "test:debug": "mocha --inspect --debug-brk",
    "codecov": "cat ./coverage/lcov.info | codecov",
    "lint": "xo index.js test/test.spec.js",
    "start": "mocha --require @babel/register --watch",
    "preversion": "npm test",
    "postversion": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlhint/htmlhint-loader.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "htmlhint",
    "linter",
    "lint",
    "html"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/htmlhint/htmlhint-loader/issues"
  },
  "homepage": "https://github.com/htmlhint/htmlhint-loader#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "glob": "^7.1.6",
    "htmlhint": "^0.14.1",
    "loader-utils": "^2.0.0",
    "strip-bom": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.4",
    "chai": "^4.2.0",
    "codecov-lite": "^1.0.3",
    "coffeescript": "^2.5.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "2.0.5",
    "raw-loader": "^4.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "strip-ansi": "^6.0.0",
    "webpack": "^4.43.0",
    "xo": "^0.32.1"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "index.js"
  ],
  "xo": {
    "space": true,
    "envs": [
      "node",
      "mocha"
    ],
    "prettier": true
  },
  "nyc": {
    "reporter": [
      "lcovonly",
      "text-summary",
      "html"
    ]
  }
}
